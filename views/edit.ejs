<%- include("../partials/header")%>
<div class="container">
	<div class="row">
			<h1 style="text-align:center">
			Edit <%=blog.name%>
			</h1>
		<div style="width:30%; margin:25px auto">
			<form action="/<%=blog._id%>?_method=put" method="post">
				<div class="form-group"><input class="form-control" type="text" name="blog[name]" placeholder="<%=blog.name%>"></div>
				<div class="form-group"><input class="form-control" type="text" name="blog[img]" placeholder="<%=blog.img%>"></div>
				<div class="form-group"><input class="form-control" type="text" name="blog[description]" placeholder="<%=blog.description%>"></div>
				<div class="form-group"><button class="btn btn-success btn-lg btn-block">Submit</button></div>
			</form>
			<a href="/">Go Back</a>	
		</div>
	</div>
</div>
<%- include("../partials/footer") %>